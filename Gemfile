source :rubygems

gem 'cinch'

gem 'rake', :require => false
gem 'activesupport', :require => 'active_support/core_ext'
gem 'i18n'

# debugging
group :development do
  gem 'pry'
  gem 'pry-nav'
  gem 'awesome_print'
end

# Redis stuff
gem 'redis'
gem 'hiredis'
gem 'redis-namespace'
gem 'redis-objects', :require => 'redis/objects'

# http stuff
gem 'typhoeus'

# issues stuff - https://github.com/peter-murach/github/
gem 'github_api'

gem 'json'
gem 'nokogiri'
gem 'curb'

group :test do
  gem 'rspec'
  gem 'fakefs', :require => 'fakefs/safe'
end
